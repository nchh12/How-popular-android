<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ResultActivity">
    <View
        android:id="@+id/slidingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background_sliding"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/labelWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#41464D"
        android:textAlignment="center"
        android:background="@drawable/custom_background_result"
        android:fontFamily="@font/math_tapping"
        android:text="word"
        android:textSize="50dp"/>
    <TextView
        android:id="@+id/labelResult"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="100dp"
        android:background="@drawable/custom_background_result"
        android:fontFamily="@font/math_tapping"
        android:layout_alignParentBottom="true"
        android:text="" />

    <TextView
        android:id="@+id/labelTmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="25dp"
        android:fontFamily="@font/math_tapping"
        android:text="searching..." />


    <Button
        android:id="@+id/btBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_back"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:fontFamily="@font/math_tapping"
        android:text="Try other words..." />
</RelativeLayout>